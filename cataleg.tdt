<!ELEMENT cataleg (single | album)+>

<!-- ===== SINGLES ===== -->
<!ELEMENT single (titol, descripcio?, pais, idioma, genere*, grup, membres, durada)>
<!ATTLIST single codi CDATA #REQUIRED>

<!-- ===== ÀLBUMS ===== -->
<!ELEMENT album (titol, descripcio?, pais, idioma, genere*, grup, membres, numero_cancons, titols_cancons)>
<!ATTLIST album codi CDATA #REQUIRED>

<!ELEMENT numero_cancons (#PCDATA)>
<!ELEMENT titols_cancons (canco+)>
<!ELEMENT canco (titol_canco, durada_canco)>
<!ATTLIST canco numero CDATA #REQUIRED>

<!-- ===== MEMBRES ===== -->
<!ELEMENT membres (membre+)>
<!ELEMENT membre (nom)>
<!ATTLIST membre sexe (home | dona) #REQUIRED>

<!-- ===== ELEMENTS SIMPLES ===== -->
<!ELEMENT titol (#PCDATA)>
<!ELEMENT descripcio (#PCDATA)>
<!ELEMENT pais (#PCDATA)>
<!ELEMENT idioma (#PCDATA)>
<!ELEMENT grup (#PCDATA)>
<!ELEMENT durada (#PCDATA)>
<!ELEMENT titol_canco (#PCDATA)>
<!ELEMENT durada_canco (#PCDATA)>
<!ELEMENT nom (#PCDATA)>

<!-- ===== GÈNERE ===== -->
<!ELEMENT genere (classica | jazz | blues | gospel | soul | pop | rockandroll | country)+>
<!ELEMENT classica EMPTY>
<!ELEMENT jazz EMPTY>
<!ELEMENT blues EMPTY>
<!ELEMENT gospel EMPTY>
<!ELEMENT soul EMPTY>
<!ELEMENT pop EMPTY>
<!ELEMENT rockandroll EMPTY>
<!ELEMENT country EMPTY>
